# Backend environment variables (copy to .env and fill in)

# Azure PostgreSQL
DATABASE_URL=jdbc:postgresql://<server-name>.postgres.database.azure.com:5432/<db-name>?sslmode=require
# For Single Server use user@server, for Flexible Server use just user
DB_USERNAME=<db-username>
DB_PASSWORD=<db-password>

# Mail (Gmail SMTP or other)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=<gmail-address>
MAIL_PASSWORD=<app-password>
MAIL_DEBUG=false
MAIL_TO=<default-recipient-email>

# Admin bootstrap (super admin created on startup if not exists)
ADMIN_USERNAME=<superadmin-username>
ADMIN_PASSWORD=<superadmin-password>
ADMIN_EMAIL=<superadmin-email>

# Server
PORT=8080
